<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="pistalix.romanticvideostatus.romanticvideosong.MainVideoView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/videoview"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.youtube.player.YouTubePlayerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:id="@+id/youtubevideo"
                            android:layout_alignParentTop="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Title"
                                android:maxLines="1"
                                android:textSize="15dp"
                                android:layout_margin="10dp"
                                android:id="@+id/videotitle"/>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/share_video"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="30dp"
                        android:src="@drawable/share_video_view" />
                    <ImageView
                        android:id="@+id/whatsapp_share"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/download1"/>
                </LinearLayout>
                <com.daimajia.numberprogressbar.NumberProgressBar
                    android:id="@+id/DownloadBAr"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:progress_unreached_color="#4191f7"
                    app:progress_reached_color="#70f741"
                    android:layout_margin="10dp"
                    app:progress_text_size="15dp"
                    />
                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ads" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#fff" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewVideosuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/whatsapp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_wa"
                android:layout_margin="8dp"/>
            <ImageView
                android:id="@+id/fb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_fb"
                android:layout_margin="8dp"/>
            <ImageView
                android:id="@+id/insta"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_insta"
                android:layout_margin="8dp"/>

            <ImageView
                android:id="@+id/fbmsg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_twi"
                android:layout_margin="8dp"/>
            <ImageView
                android:id="@+id/hike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_yt"
                android:layout_margin="8dp"/>
            <ImageView
                android:id="@+id/main_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_share"
                android:layout_margin="8dp"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
